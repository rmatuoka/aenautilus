package com.massiveProCreation.flipbook.ui{	// IMPORTS	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.utils.Timer;	import flash.events.TimerEvent;	import flash.events.Event;	import com.massiveProCreation.events.CustomEvent;		import com.greensock.TweenMax;	import com.greensock.easing.*;		public class Alert extends Sprite	{		// VARIABLES		private var _timer:Timer; 																		// timer, used to count the amount of time that alert has to stay shown for.				public function Alert(txt:String = "This is an Alert message!", delay:int = 5000) {			super();																					// call of super class constructor			title.autoSize = TextFieldAutoSize.LEFT;													// set text field property			title.text = txt;																			// set text field text			bg.width = title.width + 100;																// set the width of the background			this.mouseEnabled = true;																	// set mouseEnabled 			_timer = new Timer(delay, 1);																// setup timer			this.addEventListener(Event.ADDED_TO_STAGE, added, false, 0, true);							// add event, fired when Alert added to stage					}		private function added(e:Event):void {			_timer.addEventListener(TimerEvent.TIMER, timerTick, false, 0, true);						// when added to stage, add listener to timer, will be fired on timer tick			_timer.start();																				// start timer		}		private function timerTick(e:TimerEvent):void {			_timer.stop();																				// timer stop			TweenMax.to(this, 1, {alpha:0, ease:Expo.easeOut, onComplete:kill});		}		private function kill():void {			dispatchEvent(new CustomEvent(CustomEvent.KILL, true, false));								// dispatch the kill event, so it's parent can remove it from the stage.		}	}}