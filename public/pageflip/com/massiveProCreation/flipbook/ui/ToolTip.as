package com.massiveProCreation.flipbook.ui{	// IMPORT	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;		public class ToolTip extends Sprite	{		private var _down:Boolean = true;				public function ToolTip(txt:String = "This is a ToolTip")		{			super();																	// call the super class constructor			title.autoSize = TextFieldAutoSize.LEFT;									// set auto size of the text field			title.text = txt;															// assign the text			bg.fill.width = title.width + 20;											// set background width			this.mouseEnabled = false;													// set mouse enabled and mouse children			this.mouseChildren = false;						this.addEventListener(Event.ADDED_TO_STAGE, added, false, 0, true);			// add the added to satege event		}		private function added(e:Event):void {			this.addEventListener(Event.REMOVED_FROM_STAGE, remove, false, 0, true);			stage.addEventListener(MouseEvent.MOUSE_MOVE, move, false, 0, true);		}		private function move(e:MouseEvent):void {			if(_down && stage.mouseY - 5 - this.bg.height < 0){				_down = false;			} 						if(_down){				this.bg.triangle.y = 8.5;				this.bg.triangle.rotation = 0;				this.x = stage.mouseX;														// on mouse move set the x and y of tool tip				this.y = stage.mouseY - 5;						} else {				this.bg.triangle.y = -39;				this.bg.triangle.rotation = 180;				this.x = stage.mouseX;														// on mouse move set the x and y of tool tip				this.y = stage.mouseY + 70;						}		}		public function remove(e:Event = null):void {			stage.removeEventListener(MouseEvent.MOUSE_MOVE, move);						// when removed form stage remove the mouse move event		}		public function updateText(txt:String):void{			title.text = txt;															// update text, assign new text and change the width of the background			bg.fill.width = title.width + 20;		}		public function set down(tmp:Boolean):void {			_down = tmp;		}			}}