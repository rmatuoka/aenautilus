package com.massiveProCreation.flipbook.ui{	// IMPORTS	import com.greensock.TweenMax;	import com.greensock.easing.*;		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.MouseEvent;	public class AddPage extends Sprite	{		// VARIABLES		public var id:int;																			// id of our add page butotn		private var added:Boolean = false;  														// added property of out button				public function AddPage()		{			super();			this.mouseChildren = false;																// set mouseChildren fo the button			this.buttonMode = true;																	// set button mode			this.addEventListener(MouseEvent.CLICK, addClick, false, 0, true);						// add click event			this.addEventListener(MouseEvent.ROLL_OUT, addOut, false, 0, true);						// add roll over event			this.addEventListener(MouseEvent.ROLL_OVER, addOver, false, 0, true);					// add roll out event		}		private function addClick(e:MouseEvent):void {			if(added){								added = false;																		// set added to false				TweenMax.to(this.addToPrint, 1, {alpha:1, ease:Expo.easeOut });				TweenMax.to(this.addedToPrint, 1, {alpha:0, ease:Expo.easeOut });				this.addEventListener(MouseEvent.ROLL_OUT, addOut, false, 0, true);					// add roll out event 				}else {				added = true;																		// set added to false				TweenMax.to(this.addToPrint, 1, {alpha:0, ease:Expo.easeOut });				TweenMax.to(this.addedToPrint, 1, {alpha:1, ease:Expo.easeOut });				this.removeEventListener(MouseEvent.ROLL_OUT, addOut);								// remove roll out event, because we dont want our radio to black out after roll out 				}			}		private function addOver(e:MouseEvent):void {			TweenMax.to(this.radioOver, 1, {alpha:1, ease:Expo.easeOut });		}		private function addOut(e:MouseEvent):void {			TweenMax.to(this.radioOver, 1, {alpha:0, ease:Expo.easeOut });		}		public function get add():Boolean {			return added;		}	}}