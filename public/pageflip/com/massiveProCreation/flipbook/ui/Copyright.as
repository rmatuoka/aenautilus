package com.massiveProCreation.flipbook.ui{	// IMPORTS	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;		public class Copyright extends Sprite	{		public function Copyright(txt:String = "")		{			super();									// call the super class constructor			title.autoSize = TextFieldAutoSize.LEFT;	// setup text field autosize property			title.text = txt;							// assign text to the text field			title.x = - title.width / 2;				// set the text field x property		}	}}