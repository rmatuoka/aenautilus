package com.massiveProCreation.flipbook.ui{	// IMPORTS	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.text.TextField;	import flash.geom.ColorTransform;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	public class ChooseBook extends Sprite	{		public var index:int;				public function ChooseBook(txt:String = "Choose a book", type:String = "category", color:uint = 0xFFFFFF, opacity:Number = 1, textcolor = 0xCCCCCC)		{			super();													// call the the super class constructor			var ct:ColorTransform = new ColorTransform();				// setup color transform, needed to change the color of the background			var tf:TextFormat = new TextFormat();			tf.color = textcolor;			ct.color = color;											// assign color to the color transform variable			selectAll.alpha = pdf.alpha = bullet.alpha = table.alpha = back.alpha = books.alpha = pages.alpha = printer.alpha = 0; // setup the alpha of the icons						if(type == "category")										// depending on type inputed set the alpha to one for a specific icon				books.alpha = 1;			else if (type == "pages")				pages.alpha = 1;			else if (type == "printer")				printer.alpha = 1;					else if (type == "back")				back.alpha = 1;				else if (type == "bullet")				bullet.alpha = 1;			else if (type == "table")				table.alpha = 1;			else if (type == "pdf")				pdf.alpha = 1;				else if (type == "selectAll")				selectAll.alpha = 1;						title.autoSize = TextFieldAutoSize.LEFT;					// setup the auto size property for text field			title.text = txt;											// assign text			title.setTextFormat(tf);			title.x = 50;												// set the x of the text field			bg.width = 80 + title.width;								// set the width background			bg.transform.colorTransform = ct;							// set the color of the background			bg.alpha = opacity; 										// set alpha of the background		}	}}