package com.massiveProCreation.flipbook.ui{	// IMPORTS	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;			public class BookTitle extends MovieClip	{		// VARIABLES		private var _boundry:int = 0;					// boundry the boundry for the width of the book title		public function BookTitle(boundry:int, txt:String)		{			super();									// call to a super class constructor			_boundry = boundry;							// assign the argument to the variable			setup(txt);									// call setup function 		}		private function setup(txt:String):void {			title.autoSize = TextFieldAutoSize.LEFT;	// setup the auto size of text field			title.text = txt;							// assign the text to a text field			bg.width = _boundry - 20;					// set the background width based n the boundry 			title.x = (bg.width - title.width) / 2 ;	// set the text x property 		}	}}